<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#26a760"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nairobi_county_logo" />

            <TextView android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#26a760"
                android:padding="16dp"
                android:text="@string/app_name"
                android:textColor="#ffff00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/activity_attacks_editText_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search" />

            <ListView
                android:id="@+id/activity_attacks_listView_attacks"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/list_attacks"></ListView>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/activity_attacks_button_emergency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffff00"
        android:gravity="center"
        android:padding="16dp" android:textStyle="bold"
        android:text="@string/emergency_and_support"
        android:textColor="#26a760" />
</RelativeLayout>